{
  "family": "flexcollect-task-file",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::851697623065:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::851697623065:role/flexcollectTaskRole",
  "containerDefinitions": [
    {
      "name": "flexcollect-file",
      "image": "IMAGE_URI_TO_REPLACE",
      "essential": true,
      "environment": [
        { "name": "BATCH_SIZE", "value": "500" },
        { "name": "ABN_DETAILS_CONCURRENCY", "value": "5" },
        { "name": "GENAI_BATCH_SIZE", "value": "100" },
        { "name": "REQUEST_TIMEOUT", "value": "10" },
        { "name": "BATCH_PAUSE_SECONDS", "value": "0" }
        { "name": "RESUME_FROM_DB", "value": "1" }
      ],
      "entryPoint": ["python","-u","-m","src.lambda_function"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",  
          "awslogs-group": "/ecs/flexcollect-file",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "command": []
    }
  ]
}
